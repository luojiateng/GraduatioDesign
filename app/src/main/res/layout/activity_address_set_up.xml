<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:TitleView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <com.jiateng.widget.AppTitleView
        android:id="@+id/address_set_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        TitleView:title="修改收货地址"
        TitleView:visible="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_space"
        android:background="@color/front_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="学   校"
                android:textSize="@dimen/text_phone_title_size" />

            <EditText
                android:id="@+id/school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/little_space"
                android:layout_marginRight="@dimen/large_space"
                android:inputType="text"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="楼   栋"
                android:textSize="@dimen/text_phone_title_size" />

            <EditText
                android:id="@+id/build"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/little_space"
                android:layout_marginRight="@dimen/large_space"
                android:inputType="text"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="具体地址"
                android:textSize="@dimen/text_phone_title_size" />

            <EditText
                android:id="@+id/home_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/little_space"
                android:layout_marginRight="@dimen/large_space"
                android:inputType="text"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="姓   名"
                android:textSize="@dimen/text_phone_title_size" />

            <EditText
                android:id="@+id/address_set_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/little_space"
                android:layout_marginRight="@dimen/large_space"
                android:inputType="text"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="手机号"
                android:textSize="@dimen/text_phone_title_size" />

            <EditText
                android:id="@+id/address_set_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/little_space"
                android:layout_marginRight="@dimen/large_space"
                android:inputType="text"
                android:singleLine="true" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/deleteAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_space"
            android:layout_weight="1"
            android:text="删除地址"
            android:background="@color/text_gray_tip"
            android:textColor="@color/white"
            android:textSize="@dimen/text_phone_title_size" />

        <Button
            android:id="@+id/insertAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_space"
            android:layout_weight="1"
            android:background="@color/app_main_color"
            android:text="保存地址"
            android:textColor="@color/white"
            android:textSize="@dimen/text_phone_title_size" />
    </LinearLayout>


</LinearLayout>