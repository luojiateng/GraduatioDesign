<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_common_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/little_space"
        android:layout_marginTop="@dimen/normal_space"
        android:layout_marginBottom="@dimen/normal_space"
        android:orientation="vertical"
        android:paddingLeft="@dimen/normal_space">

        <TextView
            android:id="@+id/order_item_shopInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_arrow_right"
            android:gravity="center|left"
            android:text="户县软面"
            android:textColor="@color/black"
            android:textSize="@dimen/text_phone_title_size" />

        <include layout="@layout/layout_split_horizontal_short" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/order_item_orderInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/little_space"
                android:text="订单："
                android:textSize="@dimen/text_phone_context_size" />

            <TextView
                android:id="@+id/order_item_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/little_space"
                android:layout_toRightOf="@id/order_item_orderInfo"
                android:text="查看详情>>"
                android:textColor="@color/app_main_color" />

            <TextView
                android:id="@+id/order_item_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_item_orderInfo"
                android:layout_marginTop="@dimen/little_space"
                android:text="总计："
                android:textSize="@dimen/text_phone_context_size" />

            <TextView
                android:id="@+id/order_item_total_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_item_orderInfo"
                android:layout_marginTop="@dimen/little_space"
                android:layout_toRightOf="@id/order_item_total"
                android:text="¥"
                android:textColor="@color/ic_launcher_background"
                android:textSize="@dimen/text_phone_context_size" />

            <TextView
                android:id="@+id/order_item_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_item_click"
                android:layout_marginTop="@dimen/little_space"
                android:layout_toRightOf="@+id/order_item_total_unit"
                android:text="23"
                android:textColor="@color/ic_launcher_background"
                android:textSize="@dimen/text_phone_context_size" />

            <TextView
                android:id="@+id/order_item_status_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_item_total"
                android:layout_marginTop="@dimen/little_space"
                android:text="状态："
                android:textSize="@dimen/text_phone_context_size" />

            <TextView
                android:id="@+id/order_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_item_pay"
                android:layout_marginTop="@dimen/little_space"
                android:layout_toRightOf="@id/order_item_status_label"
                android:text="已支付"
                android:textColor="@color/finished_status"
                android:textSize="@dimen/text_phone_context_size" />

            <TextView
                android:id="@+id/order_item_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_item_status_label"
                android:layout_marginTop="@dimen/little_space"
                android:text="时间："
                android:textSize="@dimen/text_phone_context_size" />

            <TextView
                android:id="@+id/order_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_item_status"
                android:layout_marginTop="@dimen/little_space"
                android:layout_toRightOf="@id/order_item_time_label"
                android:text="2023-01-01 13:36:21"
                android:textSize="@dimen/text_phone_context_size" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>